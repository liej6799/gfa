<?xml version="1.0" encoding="utf-8"?>
<resources

    >

    <style name="style_text_normal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>



    <style name="style_text_black" parent="style_text_normal">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_edit_text_as_button" parent="style_text_normal" >
        <item name="android:focusable">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_text_black_bold_large" parent="style_text_black">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_text_primary_bold" parent="style_text_black">
        <item name="android:textColor">@color/primarydark</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_card_view_ripple">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="style_divider" parent="style_divider_margin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

        <item name="android:background">@color/black</item>
    </style>

    <style name="style_divider_margin">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>